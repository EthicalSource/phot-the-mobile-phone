<div class="bg-black">
  <section class="tell-your-story relative bg-medium-black text-white w-full flex justify-center items-center">
    <div class="flex flex-col items-center mt-[200px] mb-[200px] sm:mt-[140px] mb-[140px]">
      <h2 class="heading-xxxl text-center mb-[80px]">Tell Your Story</h2>
      <%= render Shared::Button.new(text: "Participate here", href: "/participate", type: :tertiary)%>
    </div>
  </section>
  <div class="ticker-wrap">
    <div class="ticker">
      <ul>
        <% 4.times do %>
          <% site.collections.contributors.resources.each do |contributor| %>
            <li class="uppercase"><%= contributor.data.name %></li>
            <li class="ticker-bullet">*</li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>