<% event = events.shift %>
<div class="w-full flex gap-[100px] sm:flex-wrap">
  <div class="w-full md:w-[725px] flex justify-start md:mt-[160px]">
    <div class="flex flex-col-reverse md:flex-row md:gap-[50px] sm:items-end">
      <button class="md:hidden p-1 px-4 border border-solid-black lowercase mt-[16px]"><%= event.data.clusters %></button>
      <a href="<%= url_for(event) %>">
        <div class="bg-cover bg-center w-[200px] h-[200px] md:w-[325px] md:h-[325px] mt-[10px]" style="background-image: url(<%= relative_url event.data.thumbnail %>)"></div>
      </a>
      <div class="w-full md:w-1/2 sm:text-right md:mt-[50px]">
        <p class="meta text-dark-grey mb-[20px]">2013</p>
        <a href="<%= url_for(event) %>">
          <h3 class="heading-sm text-medium-black mb-[26px]"><%= event.data.title %></h3>
        </a>
        <p class="base mb-[25px]"><%= event.content_summary %></p>
        <button class="sm:hidden p-1 px-4 border border-solid-black lowercase"><%= event.data.clusters %></button>
      </div>
    </div>
  </div>
