<% title = event.data.title %>
<% content = event.content %>

<div class="w-full flex-wrap md:flex gap-[100px] mb-[60px]">
  <div class="w-full h-fit md:w-[725px] flex justify-center mb-[80px] md:mb-[200px]">
    <div class="category-title-container">
      <img src="/images/arron_swartz.jpeg">
      <div class="category-title"><%= cluster %></div>
      <div class="category-title glow"><%= cluster %></div>
    </div>
  </div>
  <div class="w-full md:w-[725px] flex justify-start mt-0 md:mt-[160px]">
    <div class="flex gap-[50px] sm:flex-wrap-reverse">
      <img class="h-60" src="./images/eric_snowden.jpeg"/>
      <div class="w-full md:w-1/2 sm:text-right mt-[50px]">
        <p class="meta text-dark-grey mb-[20px]">2013</p>
        <h3 class="heading-sm text-medium-black mb-[26px]"><%= title %></h3>
        <p class="base">
          <%= content %>
        </p>
        <button class="p-1 px-4 border border-solid-black mt-[25px]"><%= cluster %></button>
      </div>
    </div>
  </div>
</div>
