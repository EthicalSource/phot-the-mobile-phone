<div class="card take-action">
  <%= link_to @link do %>
    <article>
      <header>
        <h2><%= @cta.title %></h2>
        <div class="subhead text-medium-grey mb-[20px]">Take Action</div>
        <img src="<%= relative_url @cta.media&.thumbnail %>"
           alt="<%= @cta.media&.alt %>" />
      </header>
      <p><%= markdownify @content %></p>
    </article>
  <% end %>
</div>
