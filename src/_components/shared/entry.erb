<div class="wrapper event">
  <div class="hidden md:block">
    <%= render Event::Thumbnail.new(event: @entry) %>
  </div>
  <article class="w-full md:min-w-[200px] <%= @classname %> mt-[26px] md:mt-[50px] flex flex-col">
    <header>
      <a href="<%= url_for(@entry) %>">
        <h2 class="heading-sm text-medium-black mb-[26px] tracking-[0.01em]">
          <%= @entry.data.title %>
        </h2>
      </a>
      <p class="meta text-dark-grey mb-[20px]"><time><%= @entry.data.start_date&.year %></time></p>
    </header>
    <p class="base mb-[25px]">
      <%= @entry.content_summary %>
    </p>
    <div class="block md:hidden flex justify-end">
      <%= render Event::Thumbnail.new(event: @entry) %>
    </div>
    <%= render Event::ClusterLink.new(event: @entry, cluster: @cluster) %>
  </article>
</div>