<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: data.title %>
  </head>
  <body class="<%= data.layout %> <%= data.page_class %> bg-black text-off-white">

    <main class="min-w-[260px] max-w-[260px] md:min-w-[960px] md:max-w-[960px] mx-auto mt-[40px] md:mt-[150px]">
      <%= partial 'entry/headline' %>
      <%= partial 'entry/card' %>
    </main>

    <%= partial 'entry/related' %>
    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
